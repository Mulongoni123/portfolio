@model Portfolio.Models.PortfolioModel

@{
    ViewData["Title"] = "Projects - MULONGONI WASHU";
}

<!-- Projects Hero -->
<section class="projects-hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold mb-4" data-aos="fade-up">My Projects</h1>
                <p class="lead mb-5" data-aos="fade-up" data-aos-delay="100">
                    A collection of my recent work showcasing my skills in full-stack development,
                    mobile applications, and innovative solutions.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Technology Filters -->
<section class="section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title" data-aos="fade-up">Project Gallery</h2>
                <p class="section-subtitle" data-aos="fade-up" data-aos-delay="100">
                    Filter projects by technology or category
                </p>
            </div>
        </div>

        <!-- Technology Filter Buttons -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="filter-buttons text-center" data-aos="fade-up">
                    <button class="filter-btn active" data-filter="all">All Projects</button>
                    <button class="filter-btn" data-filter="web">Web Applications</button>
                    <button class="filter-btn" data-filter="mobile">Mobile Apps</button>
                    <button class="filter-btn" data-filter="aspnet">ASP.NET Core</button>
                    <button class="filter-btn" data-filter="java">Java</button>
                    <button class="filter-btn" data-filter="firebase">Firebase</button>
                </div>
            </div>
        </div>

        <!-- Projects Grid -->
        <div class="row" id="projectsGrid">
            @foreach (var project in Model.Projects)
            {
                <div class="col-lg-4 col-md-6 mb-4 project-item"
                     data-category="@project.Category.ToLower().Replace(" ", "-") @string.Join(" ", project.Technologies.Select(t => t.ToLower().Replace(".", "").Replace(" ", "-")))"
                     data-aos="fade-up">
                    <div class="project-card-enhanced">
                        <div class="project-image">
                            <img src="@project.ImageUrl" alt="@project.Title" class="img-fluid">
                            <div class="project-overlay">
                                <div class="project-actions">
                                    <button class="action-btn view-details" data-project-id="@project.Title.Replace(" ", "-")">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    @if (!string.IsNullOrEmpty(project.LiveUrl) && project.LiveUrl != "#")
                                    {
                                        <a href="@project.LiveUrl" class="action-btn" target="_blank">
                                            <i class="fas fa-external-link-alt"></i>
                                        </a>
                                    }
                                    @if (!string.IsNullOrEmpty(project.GitHubUrl) && project.GitHubUrl != "#")
                                    {
                                        <a href="@project.GitHubUrl" class="action-btn" target="_blank">
                                            <i class="fab fa-github"></i>
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="project-content">
                            <div class="project-category">@project.Category</div>
                            <h4 class="project-title">@project.Title</h4>
                            <p class="project-description">@project.Description</p>
                            <div class="project-technologies">
                                @foreach (var tech in project.Technologies)
                                {
                                    <span class="tech-tag">@tech</span>
                                }
                            </div>
                            <div class="project-meta">
                                <span class="project-role">
                                    <i class="fas fa-user me-1"></i>@project.Role
                                </span>
                                <span class="project-date">
                                    <i class="fas fa-calendar me-1"></i>@project.CompletionDate.ToString("MMM yyyy")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- No Projects Message -->
        <div class="row d-none" id="noProjectsMessage">
            <div class="col-12 text-center">
                <div class="no-projects">
                    <i class="fas fa-search fa-3x mb-3 text-muted"></i>
                    <h4>No projects found</h4>
                    <p>Try selecting different filters</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Project Modals -->
@foreach (var project in Model.Projects)
{
    <div class="modal fade" id="projectModal-@project.Title.Replace(" ", "-")" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@project.Title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="@project.ImageUrl" alt="@project.Title" class="img-fluid rounded">
                        </div>
                        <div class="col-md-6">
                            <div class="project-details">
                                <h6 class="text-primary">Project Role</h6>
                                <p class="mb-3">@project.Role</p>

                                <h6 class="text-primary">Description</h6>
                                <p class="mb-3">@project.DetailedDescription</p>

                                <h6 class="text-primary">Technologies Used</h6>
                                <div class="tech-tags mb-3">
                                    @foreach (var tech in project.Technologies)
                                    {
                                        <span class="tech-tag">@tech</span>
                                    }
                                </div>

                                <h6 class="text-primary">Key Features</h6>
                                <ul class="project-features">
                                    @if (project.Title.Contains("Rock Waste Management"))
                                    {
                                        <li>Multi-role authentication system</li>
                                        <li>Real-time booking and tracking</li>
                                        <li>Firestore database integration</li>
                                        <li>Worker dashboards and analytics</li>
                                        <li>Payment processing system</li>
                                        <li>Responsive design</li>
                                    }
                                    else if (project.Title.Contains("DustbinPro"))
                                    {
                                        <li>Firebase Authentication</li>
                                        <li>Real-time booking system</li>
                                        <li>Google Maps integration</li>
                                        <li>Role-based access control</li>
                                        <li>Payment status tracking</li>
                                        <li>Mobile-first design</li>
                                    }
                                    else if (project.Title.Contains("Disaster Alleviation"))
                                    {
                                        <li>ASP.NET Core MVC 8.0</li>
                                        <li>Entity Framework Core</li>
                                        <li>SQL Server integration</li>
                                        <li>RESTful API endpoints</li>
                                        <li>Comprehensive testing suite</li>
                                        <li>Load testing implementation</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    @if (project.Title.Contains("Rock Waste Management"))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h6 class="text-primary">Project Architecture</h6>
                                <div class="architecture-details">
                                    <p><strong>Frontend:</strong> ASP.NET Core MVC, Bootstrap 5, JavaScript</p>
                                    <p><strong>Backend:</strong> ASP.NET Core, C#</p>
                                    <p><strong>Database:</strong> Google Cloud Firestore</p>
                                    <p><strong>Authentication:</strong> Session-based with role management</p>
                                    <p><strong>Hosting:</strong> Google Cloud Platform</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    @if (!string.IsNullOrEmpty(project.LiveUrl) && project.LiveUrl != "#")
                    {
                        <a href="@project.LiveUrl" class="btn btn-primary" target="_blank">
                            <i class="fas fa-external-link-alt me-2"></i>Live Demo
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(project.GitHubUrl) && project.GitHubUrl != "#")
                    {
                        <a href="@project.GitHubUrl" class="btn btn-outline-primary" target="_blank">
                            <i class="fab fa-github me-2"></i>View Code
                        </a>
                    }
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@section Styles {
    <style>
        .projects-hero-section {
            padding: 120px 0 60px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-align: center;
        }

        .filter-buttons {
            margin-bottom: 2rem;
        }

        .filter-btn {
            background: transparent;
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
            padding: 0.75rem 1.5rem;
            margin: 0.5rem;
            border-radius: 25px;
            transition: var(--transition);
            font-weight: 500;
        }

            .filter-btn:hover,
            .filter-btn.active {
                background: var(--primary-color);
                color: white;
                transform: translateY(-2px);
            }

        .project-card-enhanced {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: var(--transition);
            height: 100%;
        }

            .project-card-enhanced:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            }

        .project-image {
            position: relative;
            height: 250px;
            overflow: hidden;
        }

            .project-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: var(--transition);
            }

        .project-card-enhanced:hover .project-image img {
            transform: scale(1.1);
        }

        .project-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(52, 152, 219, 0.9);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: var(--transition);
        }

        .project-card-enhanced:hover .project-overlay {
            opacity: 1;
        }

        .project-actions {
            display: flex;
            gap: 1rem;
        }

        .action-btn {
            width: 50px;
            height: 50px;
            background: white;
            border: none;
            border-radius: 50%;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            transition: var(--transition);
        }

            .action-btn:hover {
                transform: scale(1.1);
                background: var(--primary-color);
                color: white;
            }

        .project-content {
            padding: 1.5rem;
        }

        .project-category {
            color: var(--primary-color);
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
        }

        .project-title {
            font-weight: 600;
            margin-bottom: 0.75rem;
            font-size: 1.25rem;
        }

        .project-description {
            color: var(--text-light);
            margin-bottom: 1rem;
            line-height: 1.6;
        }

        .project-technologies {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .tech-tag {
            background: var(--bg-light);
            color: var(--text-dark);
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .project-meta {
            display: flex;
            justify-content: space-between;
            font-size: 0.9rem;
            color: var(--text-light);
        }

        .project-role,
        .project-date {
            display: flex;
            align-items: center;
        }

        .no-projects {
            padding: 4rem 2rem;
            color: var(--text-light);
        }

        /* Modal Styles */
        .project-features {
            list-style: none;
            padding: 0;
        }

            .project-features li {
                padding: 0.5rem 0;
                border-bottom: 1px solid #eee;
            }

                .project-features li:before {
                    content: '✓';
                    color: var(--primary-color);
                    font-weight: bold;
                    margin-right: 0.5rem;
                }

        .modal-content {
            border: none;
            border-radius: 15px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.2);
        }

        .modal-header {
            border-bottom: 1px solid #eee;
            padding: 1.5rem 2rem;
        }

        .modal-body {
            padding: 2rem;
        }

        .modal-footer {
            border-top: 1px solid #eee;
            padding: 1.5rem 2rem;
        }

        .architecture-details {
            background: var(--bg-light);
            padding: 1.5rem;
            border-radius: 10px;
            margin-top: 1rem;
        }

            .architecture-details p {
                margin-bottom: 0.5rem;
            }
    </style>
}

@section Scripts {
    <script>
        // Project Filtering
        document.addEventListener('DOMContentLoaded', function() {
            const filterButtons = document.querySelectorAll('.filter-btn');
            const projectItems = document.querySelectorAll('.project-item');
            const noProjectsMessage = document.getElementById('noProjectsMessage');

            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    // Add active class to clicked button
                    this.classList.add('active');

                    const filterValue = this.getAttribute('data-filter');
                    filterProjects(filterValue);
                });
            });

            function filterProjects(filter) {
                let visibleCount = 0;

                projectItems.forEach(item => {
                    const categories = item.getAttribute('data-category').split(' ');
                    const shouldShow = filter === 'all' || categories.some(cat =>
                        cat.includes(filter.toLowerCase()));

                    if (shouldShow) {
                        item.style.display = 'block';
                        visibleCount++;
                    } else {
                        item.style.display = 'none';
                    }
                });

                // Show/hide no projects message
                if (visibleCount === 0) {
                    noProjectsMessage.classList.remove('d-none');
                } else {
                    noProjectsMessage.classList.add('d-none');
                }
            }

            // Project modal handlers
            const viewDetailButtons = document.querySelectorAll('.view-details');
            viewDetailButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const projectId = this.getAttribute('data-project-id');
                    const modal = new bootstrap.Modal(document.getElementById('projectModal-' + projectId));
                    modal.show();
                });
            });
        });
    </script>
}