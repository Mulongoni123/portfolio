@model Portfolio.Models.PortfolioModel

@{
    ViewData["Title"] = "Skills - MULONGONI WASHU";
}

<!-- Skills Hero -->
<section class="skills-hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold mb-4" data-aos="fade-up">Technical Skills</h1>
                <p class="lead" data-aos="fade-up" data-aos-delay="100">
                    A comprehensive overview of my technical expertise across various domains
                    of software development and technologies.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Skills Overview -->
<section class="section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title" data-aos="fade-up">Skills Overview</h2>
                <p class="section-subtitle" data-aos="fade-up" data-aos-delay="100">
                    Proficiency levels across different technology stacks
                </p>
            </div>
        </div>

        <!-- Animated Skill Bars -->
        <div class="row">
            @foreach (var category in Model.TechnicalSkills)
            {
                <div class="col-lg-6 mb-5" data-aos="fade-up">
                    <div class="skill-category-card">
                        <div class="skill-category-header">
                            <div class="skill-category-icon">
                                <i class="@category.Icon"></i>
                            </div>
                            <h4>@category.Name</h4>
                        </div>
                        <div class="skill-bars">
                            @foreach (var skill in category.Skills)
                            {
                                <div class="skill-item">
                                    <div class="skill-info">
                                        <span class="skill-name">@skill.Name</span>
                                        <span class="skill-percentage">@skill.Proficiency%</span>
                                    </div>
                                    <div class="skill-bar">
                                        <div class="skill-progress" data-progress="@skill.Proficiency"
                                             style="background: @skill.Color; width: 0%"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Technology Icons Grid -->
<section class="section bg-light">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title" data-aos="fade-up">Technologies & Tools</h2>
                <p class="section-subtitle" data-aos="fade-up" data-aos-delay="100">
                    Technologies I work with regularly
                </p>
            </div>
        </div>

        <div class="row">
            @{
                var allSkills = Model.TechnicalSkills.SelectMany(c => c.Skills).ToList();
                var techIcons = new Dictionary<string, string>
                        {
                        { "C#", "fab fa-microsoft" },
                        { "Java", "fab fa-java" },
                        { "PHP", "fab fa-php" },
                        { "JavaScript", "fab fa-js" },
                        { "SQL", "fas fa-database" },
                        { "ASP.NET Core MVC", "fab fa-microsoft" },
                        { "Bootstrap 5", "fab fa-bootstrap" },
                        { "HTML5", "fab fa-html5" },
                        { "CSS3", "fab fa-css3-alt" },
                        { "REST APIs", "fas fa-code" },
                        { "Android (Java)", "fab fa-android" },
                        { "Java Swing", "fab fa-java" },
                        { "Firestore", "fas fa-database" },
                        { "MySQL", "fas fa-database" },
                        { "Oracle", "fas fa-database" },
                        { "Git/GitHub", "fab fa-github" },
                        { "Visual Studio", "fas fa-code" },
                        { "Android Studio", "fab fa-android" },
                        { "VS Code", "fas fa-code" },
                        { "Firebase", "fas fa-fire" },
                        { "Google Cloud", "fab fa-google" }
                        };
            }
            @foreach (var skill in allSkills)
            {
                <div class="col-lg-2 col-md-3 col-4 mb-4" data-aos="zoom-in" data-aos-delay="50">
                    <div class="tech-icon-card">
                        <div class="tech-icon" style="color: @skill.Color">
                            @if (techIcons.ContainsKey(skill.Name))
                            {
                                <i class="@techIcons[skill.Name]"></i>
                            }
                            else
                            {
                                <i class="fas fa-code"></i>
                            }
                        </div>
                        <span class="tech-name">@skill.Name</span>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Methodology & Approach -->
